<% content_for :title do %>Payway Dash<% end %>

<div class="gridster">
  <ul>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-view="Clock"></div>
      <i class="icon-time icon-background"></i>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-view="Image" data-image="/tulo.png"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="money" data-view="Number" data-title="Karma" style="background-color:#96bf48;" data-prefix="SEK "></div>
      <i class="icon-heart icon-background"></i>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="total-accounts" data-view="Number" data-title="Total accounts"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="total-activations" data-view="Number" data-title="Total activations"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="total-transactions" data-view="Number" data-title="Total transactions"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="total-orders" data-view="Number" data-title="Total orders"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="money-today" data-view="Number" data-title="Karma today" style="background-color:#96bf48;" data-prefix="SEK "></div>
      <i class="icon-heart icon-background"></i>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="accounts-today" data-view="Number" data-title="Registered accounts today" style="background-color:#ff9618"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="activations-today" data-view="Number" data-title="Activated accounts today" style="background-color:#ff9618"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="orders-today" data-view="Number" data-title="Closed orders today" style="background-color:#ff9618"></div>
    </li>

  </ul>
</div>
